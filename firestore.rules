rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Bloqueia tudo por padrão
    match /{document=**} {
      allow read, write: if false;
    }

    // Função auxiliar para verificar se o usuário pertence ao condomínio
    function isMember(condoId) {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.condoId == condoId;
    }

    // Função auxiliar para verificar se o usuário é síndico do condomínio
    function isSyndic(condoId) {
      return isMember(condoId) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['syndic', 'super_admin'];
    }

    // --- REGRAS DE USUÁRIOS ---
    match /users/{userId} {
      // Permite ler/editar o próprio perfil (ID do documento == UID do Auth)
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permite deletar o perfil antigo durante a migração (ID do documento != UID do Auth, mas email coincide)
      allow delete: if request.auth != null && resource.data.email == request.auth.token.email;

      // Permite que síndicos gerenciem usuários do seu condomínio
      allow create: if request.auth != null && isSyndic(request.resource.data.condoId);
      allow read, update, delete: if request.auth != null && isSyndic(resource.data.condoId);

      // Permite listar usuários (necessário para o fluxo de login/migração e busca de moradores)
      allow list: if request.auth != null;
    }

    // --- REGRAS DE CONDOMÍNIOS ---
    match /condos/{condoId} {
      allow read: if isMember(condoId);
      allow update: if isSyndic(condoId);
      allow create: if request.auth != null;
    }

    // --- REGISTRO DE SUBDOMÍNIOS ---
    match /subdomain_registry/{subdomain} {
      allow get: if true;
      allow create: if request.auth != null;
    }

    // --- REGRAS PARA COLEÇÕES DO CONDOMÍNIO ---
    match /reservations/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /visitors/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /areas/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /units/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /transactions/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /notices/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /incidents/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /documents/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /reminders/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
    match /orders/{id} { allow read, write: if isMember(resource.data.condoId || request.resource.data.condoId); }
  }
}
